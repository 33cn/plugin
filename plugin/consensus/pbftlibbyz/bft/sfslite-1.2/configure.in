new_LDFLAGS=
for flag in $LDFLAGS; do
    if test x"$flag" = x-static; then
	LIBAPM=
	new_LDFLAGS="$new_LDFLAGS -all-static"
    else
	new_LDFLAGS=" $flag"
    fi
done
